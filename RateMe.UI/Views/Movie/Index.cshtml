@model List<RateMe.Core.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of movies</h2>

<div class="datagrid">
    <table>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Genre</th>
            <th>Edit</th>
        </tr>
        @foreach (var movie in Model)
        {
            var style = (movie.Id %2 ==0) ? "alt" : "";

            <tr class="@style">
                <td>@movie.Id</td>
                <td>@movie.Title</td>
                <td>@movie.Genres</td>
                <td>@Html.ActionLink("Edit", "Edit", "Movie", new { id = movie.Id }, null)</td>
            </tr>
        }
    </table>
</div>
